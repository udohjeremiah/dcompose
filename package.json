{
  "name": "dcompose",
  "version": "1.0.0",
  "description": "Developer-friendly CLI wrapper for Docker Compose with superpowers.",
  "keywords": [
    "docker",
    "docker-compose",
    "docker compose",
    "compose",
    "container",
    "orchestration",
    "tooling",
    "devops",
    "developer-tools",
    "dx",
    "cli",
    "terminal"
  ],
  "author": "Udoh Jeremiah <hello@udohjeremiah.com> (https://udohjeremiah.com)",
  "repository": {
    "type": "git",
    "url": "https://github.com/udohjeremiah/dcompose.git"
  },
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "sideEffects": false,
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint . --ext .ts,.mts,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.mts,.js,.mjs --fix",
    "build": "rm -rf dist && tsc"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^16.5.0",
    "prettier": "^3.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
